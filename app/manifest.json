{
    "name": "Visual Studio Online Extension",
    "description": "This extension provides some missing features in Visual Studio Online",
    "manifest_version": 2,
    "version": "2.0",
    "browser_action": {
        "default_icon": "images/vso19.png",
        "default_title": "VSO Utilities"
    },
    "icons": {
        "16": "images/vso16.png",
        "128": "images/vso128.png"
    },
    "content_scripts": [
        {
            "css": [
                "styles/toolbar.css"
            ],
            "matches": [
                "https://*.visualstudio.com/*"
            ],
            "js": [
                "scripts/jquery.min.js",
                "scripts/content.js",
                "scripts/addscrumtemplate.js",
                "scripts/exportvsodata.js",
                "scripts/notifypullrequest.js",
                "scripts/showaddtask.js",
                "scripts/showmyvsotasks.js",
                "scripts/keyindenting.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "scripts/jquery.min.js",
            "scripts/chromereload.js",
            "scripts/background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "web_accessible_resources": [
        "images/*.png",
        "fonts/*",
        "toolbar.html"
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}